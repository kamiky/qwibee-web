{
  "name": "watchmefans-web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "yarn translate && astro dev",
    "start": "node dist/server/entry.mjs",
    "build": "yarn translate && astro check && astro build",
    "build:prod": "yarn translate && astro check && astro build --mode production",
    "prod": "pm2 start ecosystem.config.cjs",
    "prod-legacy": "cross-env PORT=8000 pm2 start ./dist/server/entry.mjs --name watchmefans-web",
    "preview": "astro preview",
    "astro": "astro",
    "deploy:prod": "./bin/deploy.prod.sh",
    "deploy:medias": "./bin/deploy.medias.sh",
    "restart:prod": "./bin/restart.prod.sh",
    "translate": "node scripts/generate-translations.js",
    "prepare:medias": "node scripts/prepare-medias.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/node": "8.1.0",
    "@astrojs/react": "^3.6.2",
    "@astrojs/tailwind": "^5.1.0",
    "@types/node": "^25.0.6",
    "astro": "^4.15.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^6.7.0",
    "stripe": "^20.1.2",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.9.3"
  }
}
