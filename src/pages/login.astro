---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";
import { useTranslations } from "@/i18n/translations";

const lang = "en";
const t = useTranslations(lang);
---

<Layout 
  title={t.seo.auth.title} 
  description={t.seo.auth.description}
  lang={lang}
>
  <Header lang={lang} />
  <LanguageSwitcher lang={lang} />

  <main class="pt-24 pb-12 min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="max-w-2xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 text-gray-900">
          {t.auth.title}
        </h1>
        <p class="text-xl text-gray-600">
          {t.auth.subtitle}
        </p>
      </div>

      <!-- Auth Form -->
      <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-lg">
        <div id="form-container">
          <div class="mb-6">
            <label for="email" class="block text-lg font-medium mb-2 text-gray-900">
              {t.auth.form.emailLabel}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder={t.auth.form.emailPlaceholder}
              class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-brand-blue-500 focus:ring-2 focus:ring-brand-blue-500/20 focus:outline-none text-gray-900"
              required
            />
            <p class="text-sm text-gray-600 mt-2">
              {t.auth.form.emailHelp}
            </p>
          </div>

          <button
            id="auth-btn"
            class="w-full bg-brand-blue-500 hover:bg-brand-blue-600 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span id="auth-btn-text"
              >{t.auth.form.submitButton}</span
            >
          </button>
        </div>

        <!-- Success Message (hidden by default) -->
        <div id="success-container" class="hidden">
          <div class="text-center mb-6">
            <div class="text-6xl mb-4">{t.auth.success.icon}</div>
            <h2 class="text-2xl font-bold text-green-600 mb-2">
              {t.auth.success.title}
            </h2>
            <p class="text-gray-700 mb-4">
              {t.auth.success.message}
              <strong id="auth-email" class="text-gray-900"></strong>
            </p>
            <p class="text-gray-600 text-sm">
              {t.auth.success.info}
            </p>
          </div>

          <div
            class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-4"
          >
            <h3 class="text-lg font-bold text-blue-700 mb-3">
              {t.auth.success.nextSteps.title}
            </h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-brand-blue-500 mt-1 font-bold">1.</span>
                <span>{t.auth.success.nextSteps.step1}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-brand-blue-500 mt-1 font-bold">2.</span>
                <span>{t.auth.success.nextSteps.step2}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-brand-blue-500 mt-1 font-bold">3.</span>
                <span>{t.auth.success.nextSteps.step3}</span>
              </li>
            </ul>
          </div>

          <div
            class="bg-yellow-50 border border-yellow-200 rounded-lg p-4"
          >
            <p class="text-sm text-yellow-700 mb-2 font-bold">
              {t.auth.success.important.title}
            </p>
            <p class="text-sm text-gray-700">
              {t.auth.success.important.message}
            </p>
          </div>
        </div>

        <!-- Error Message (hidden by default) -->
        <div id="error-container" class="hidden mt-4">
          <div
            class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700"
          >
            <p class="font-medium mb-1">{t.auth.error.title}</p>
            <p class="text-sm" id="error-message"></p>
          </div>
        </div>
      </div>

      <!-- Help Section -->
      <div
        class="mt-8 bg-white rounded-xl p-6 border border-gray-200 shadow-md"
      >
        <h3 class="text-lg font-bold mb-3 text-gray-900">{t.auth.help.title}</h3>
        <ul class="space-y-2 text-gray-700">
          <li class="flex items-start gap-2">
            <span class="text-brand-blue-500 mt-1">•</span>
            <span>{t.auth.help.tip1}</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-brand-blue-500 mt-1">•</span>
            <span>{t.auth.help.tip2}</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-brand-blue-500 mt-1">•</span>
            <span
              >{t.auth.help.tip3}
              <a
                href="/contact"
                class="text-brand-blue-500 hover:text-brand-blue-600 underline"
                >{t.auth.help.contactSupport}</a
              ></span
            >
          </li>
        </ul>
      </div>

      <!-- Back Link -->
      <div class="text-center mt-8">
        <a
          href="/"
          class="text-brand-blue-500 hover:text-brand-blue-600 transition-colors"
        >
          {t.auth.backLink}
        </a>
      </div>
    </div>
  </main>

  <Footer lang={lang} />

  <script define:vars={{ t }}>
    const authBtn = document.getElementById("auth-btn");
    const authBtnText = document.getElementById("auth-btn-text");
    const emailInput = document.getElementById("email");
    const formContainer = document.getElementById("form-container");
    const successContainer = document.getElementById("success-container");
    const errorContainer = document.getElementById("error-container");
    const errorMessage = document.getElementById("error-message");

    // Get redirect parameters from URL
    const urlParams = new URLSearchParams(window.location.search);
    const redirectUrl = urlParams.get("redirect");
    const openStripe = urlParams.get("openStripe");

    if (authBtn && emailInput) {
      authBtn.addEventListener("click", async () => {
        const email = emailInput.value.trim();

        // Validate input
        if (!email || !email.includes("@")) {
          showError("Please enter a valid email address");
          return;
        }

        try {
          // Disable button
          authBtn.disabled = true;
          if (authBtnText)
            authBtnText.textContent = t.auth.form.submitting;

          // Hide previous errors
          if (errorContainer) errorContainer.classList.add("hidden");

          // Prepare request body
          const requestBody = { email };
          if (redirectUrl) {
            requestBody.redirectUrl = redirectUrl;
          }
          if (openStripe === "true") {
            requestBody.openStripe = true;
          }

          // Call auth API
          const response = await fetch("/api/auth/send-magic-link", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(requestBody),
          });

          const data = await response.json();

          if (!response.ok) {
            throw new Error(data.error || "Failed to send authentication link");
          }

          console.log("✓ Magic link email sent successfully");

          // Show success message
          if (formContainer) formContainer.classList.add("hidden");
          if (successContainer) successContainer.classList.remove("hidden");

          // Fill in email
          const authEmailEl = document.getElementById("auth-email");
          if (authEmailEl) {
            authEmailEl.textContent = email;
          }
        } catch (error) {
          console.error("Authentication error:", error);
          showError(error.message || "Failed to send authentication link");

          // Re-enable button
          authBtn.disabled = false;
          if (authBtnText)
            authBtnText.textContent = t.auth.form.submitButton;
        }
      });

      // Allow Enter key to submit
      emailInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
          authBtn.click();
        }
      });
    }

    // @ts-ignore
    function showError(message) {
      if (errorContainer && errorMessage) {
        errorMessage.textContent = String(message || "An error occurred");
        errorContainer.classList.remove("hidden");
      }
    }
  </script>
</Layout>
