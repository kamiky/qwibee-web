---
export const prerender = false;

const key = Astro.url.searchParams.get("key");
const type = Astro.url.searchParams.get("type");
const backendUrl = import.meta.env.PUBLIC_API_URL || "http://localhost:8002";
const baseUrl = import.meta.env.PUBLIC_APP_URL || Astro.url.origin;

// If no key or type provided, redirect to home
if (!key || !type) {
  return Astro.redirect("/");
}

// Validate type
if (type !== "success" && type !== "cancel") {
  return Astro.redirect("/");
}

try {
  // Call backend to resolve redirect token
  const response = await fetch(`${backendUrl}/stripe/resolve-redirect-token`, {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify({ token: key, type }),
  });

  if (!response.ok) {
    console.error("Failed to resolve redirect token:", response.statusText);
    return Astro.redirect("/");
  }

  const data = await response.json();

  // Check if token is valid
  if (!data.success || !data.data.valid || !data.data.destinationUrl) {
    console.warn("Invalid or expired redirect token");
    return Astro.redirect("/");
  }

  // Get the destination URL from backend
  let destinationUrl = data.data.destinationUrl;

  // Extract any additional query params from the current URL (added by Stripe)
  // e.g., session_id that Stripe adds to success URLs
  const currentParams = new URLSearchParams(Astro.url.search);
  const additionalParams = new URLSearchParams();

  // Skip our own params (key and type)
  for (const [paramKey, paramValue] of currentParams.entries()) {
    if (paramKey !== "key" && paramKey !== "type") {
      additionalParams.set(paramKey, paramValue);
    }
  }

  // Append additional params to destination URL if any exist
  if (additionalParams.toString()) {
    const separator = destinationUrl.includes("?") ? "&" : "?";
    destinationUrl = `${destinationUrl}${separator}${additionalParams.toString()}`;
  }

  // Redirect to final destination URL
  return Astro.redirect(destinationUrl);
} catch (error) {
  console.error("Error resolving redirect token:", error);
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <style>
      body {
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
      }
      .loader {
        text-align: center;
      }
      .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top: 4px solid white;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto 20px;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <div class="loader">
      <div class="spinner"></div>
      <p>Redirecting...</p>
    </div>
  </body>
</html>
