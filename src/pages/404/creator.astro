---
import LayoutCreator from "@/layouts/LayoutCreator.astro";
import { useTranslations } from "@/i18n/translations";

const lang = (Astro.url.searchParams.get("lang") as "en" | "fr") || "en";
const t = useTranslations(lang);
---

<LayoutCreator
  title={t.notFound.title}
  description={t.notFound.message}
  lang={lang}
>
  <main
    class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center px-6 py-20"
  >
    <div class="max-w-2xl w-full text-center">
      <!-- 404 Large Text -->
      <div class="relative mb-8">
        <h1
          class="text-[180px] sm:text-[220px] lg:text-[280px] font-bold text-transparent bg-clip-text bg-gradient-to-br from-brand-blue-500 to-purple-500 leading-none select-none"
        >
          404
        </h1>
        <div class="absolute inset-0 blur-3xl opacity-30">
          <div
            class="w-full h-full bg-gradient-to-br from-brand-blue-500 to-purple-500"
          >
          </div>
        </div>
      </div>

      <!-- Error Message -->
      <div class="space-y-6 mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900">
          {t.notFound.heading}
        </h2>
        <p class="text-lg sm:text-xl text-gray-600 max-w-xl mx-auto">
          {t.notFound.message}
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-4 flex-wrap justify-center">
        <a
          href="/"
          class="px-8 py-3 bg-gradient-to-r from-brand-blue-500 to-purple-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-200"
        >
          {t.notFound.suggestions.home}
        </a>
        <a
          href="/contact"
          class="px-8 py-3 bg-white text-gray-700 font-semibold rounded-lg border border-gray-300 hover:shadow-lg hover:scale-105 transition-all duration-200"
        >
          {t.notFound.suggestions.contact}
        </a>
      </div>
    </div>
  </main>
</LayoutCreator>

<style>
  /* Add a subtle animation to the 404 text */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  h1 {
    animation: float 3s ease-in-out infinite;
  }
</style>
