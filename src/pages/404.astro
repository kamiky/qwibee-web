---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { useTranslations, type Language } from "@/i18n/translations";

const lang: Language = "en";
const t = useTranslations(lang);
---

<Layout title={t.notFound.title} lang={lang}>
  <Header lang={lang} />

  <main
    class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center px-6 py-20"
  >
    <div class="max-w-2xl w-full text-center">
      <!-- 404 Large Text -->
      <div class="relative mb-8">
        <h1
          class="text-[180px] sm:text-[220px] lg:text-[280px] font-bold text-transparent bg-clip-text bg-gradient-to-br from-brand-blue-500 to-purple-500 leading-none select-none"
        >
          404
        </h1>
        <div class="absolute inset-0 blur-3xl opacity-30">
          <div
            class="w-full h-full bg-gradient-to-br from-brand-blue-500 to-purple-500"
          >
          </div>
        </div>
      </div>

      <!-- Error Message -->
      <div class="space-y-6 mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900">
          {t.notFound.heading}
        </h2>
        <p class="text-lg sm:text-xl text-gray-600 max-w-xl mx-auto">
          {t.notFound.message}
        </p>
      </div>
    </div>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  /* Add a subtle animation to the 404 text */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  h1 {
    animation: float 3s ease-in-out infinite;
  }
</style>
