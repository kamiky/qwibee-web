import LayoutCreator from "@/layouts/LayoutCreator.astro";
import { useTranslations, type Language } from "@/i18n/translations";
import { profiles, type ContentType, getProfileUrl } from "@/data/profiles";

const { slug } = Astro.params;

// Find profile by slug
const profile = Object.values(profiles).find(p => p.slug === slug);

// Check if profile exists
if (!profile) {
  return Astro.redirect("/404");
}

// Check if profile is dev-only and we're not in development mode
const isDevelopment = import.meta.env.MODE === "development";
if (profile.devonly === true && !isDevelopment) {
  return Astro.redirect("/404");
}

// Use profile.id as profileId for compatibility with rest of the code
const profileId = profile.id;

// Set cookie to indicate user is in creator mode (only if profile exists)
Astro.cookies.set('qwb-creator-mode', 'true', {
  path: '/',
  maxAge: 60 * 60 * 24 * 365, // 1 year
  httpOnly: false, // Allow client-side access if needed
  sameSite: 'lax',
});

// Detect language from URL path
const pathname = Astro.url.pathname;
const lang: Language = pathname.startsWith('/fr/') || pathname === '/fr' ? 'fr' : 'en';
const t = useTranslations(lang);

// Debug mode: simulate different membership levels in development with ?debug=true&simulate=membership|all
const isDebugMode = import.meta.env.DEV && Astro.url.searchParams.has('debug');
const simulateMode = isDebugMode ? Astro.url.searchParams.get('simulate') : null;

// Check if debug=true to show media titles
const showMediaTitles = Astro.url.searchParams.get('debug') === 'true';

// Stripe debug secret: capture from URL params (?secret=XXX) for testing on production
const stripeDebugSecret = Astro.url.searchParams.get('secret');

// Check user authentication and access on server-side
let USER_PLAN: "free" | "membership" = "free";
let PURCHASED_VIDEO_IDS: string[] = [];

// Get access token from cookies (Astro.cookies is the proper way)
const accessToken = Astro.cookies.get('qwb_access_token')?.value;

if (accessToken) {
  try {
    // Verify token with backend to get memberships and purchased content
    const backendUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8002';
    const response = await fetch(`${backendUrl}/auth/verify-token`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ token: accessToken }),
    });

    if (response.ok) {
      const data = await response.json();
      
      // Check if user has active membership for this profile
      if (data.data.valid && data.data.memberships) {
        const membership = data.data.memberships.find(
          (m: any) => m.profileId === profileId && (m.status === 'active' || m.status === 'trialing')
        );
        
        if (membership) {
          USER_PLAN = "membership";
        }
      }
      
      // Get purchased content for this profile
      if (data.data.purchasedContent) {
        PURCHASED_VIDEO_IDS = data.data.purchasedContent
          .filter((pc: any) => pc.profileId === profileId)
          .map((pc: any) => pc.videoId);
      }
    }
  } catch (error) {
    console.error('Error verifying token on server:', error);
    // Continue with USER_PLAN = "free" if verification fails
  }
}

// Format price helper
const formatPrice = (cents: number) => `$${(cents / 100).toFixed(2)}`;

// Parse bio links with syntax (URL)[Link Text]
const parseBioLinks = (text: string): string => {
  // Replace (URL)[Text] with clickable links
  const linkRegex = /\(([^)]+)\)\[([^\]]+)\]/g;
  let parsed = text.replace(linkRegex, '<a href="$1" target="_blank" rel="noopener noreferrer" class="text-brand-blue-500 hover:text-brand-blue-600 underline">$2</a>');
  
  // Convert \n to <br> tags for line breaks
  parsed = parsed.replace(/\n/g, '<br>');
  
  return parsed;
};

// Calculate promotional price helper
const calculatePromotionalPrice = (originalPrice: number): number => {
  if (!profile.promotionPercentage || profile.promotionPercentage === 0) {
    return originalPrice;
  }
  return Math.round(originalPrice * (1 - profile.promotionPercentage / 100));
};

// Helper to determine if user has access to content
const hasAccess = (contentType: ContentType, videoId: string): boolean => {
  // Debug mode: simulate different membership levels
  if (isDebugMode) {
    if (simulateMode === 'all') {
      // Unlock all content (free, membership, and paid)
      return true;
    } else if (simulateMode === 'membership') {
      // Unlock free and membership content only
      return contentType === 'free' || contentType === 'membership';
    } else {
      // Default debug mode: unlock only free content
      return contentType === 'free';
    }
  }
  
  if (contentType === "free") return true;
  if (contentType === "membership") return USER_PLAN === "membership";
  if (contentType === "paid") return PURCHASED_VIDEO_IDS.includes(videoId);
  return false;
};

// Helper to get the appropriate filename based on access
const getVideoFilename = (
  contentType: ContentType,
  videoId: string,
  paidFilename: string,
  previewFilename: string
) => {
  return hasAccess(contentType, videoId) ? paidFilename : previewFilename;
};

// Keep original order from data file
const allVideos = [...profile.videos];

// Check if user has membership (real or simulated in debug mode)
const hasActiveMembership = USER_PLAN === "membership" || (isDebugMode && simulateMode === "membership") || (isDebugMode && simulateMode === "all");

// Filter hidden content for non-subscribers
const sortedVideos = allVideos.filter(video => {
  // IMPORTANT: If user has membership (real or simulated), show ALL content (including hidden)
  if (hasActiveMembership) return true;
  
  // If no membership, only show non-hidden content
  return !video.hide;
});

// Count hidden content for CTA and debug section
const hiddenVideos = allVideos.filter(v => v.hide);
const hiddenCount = hiddenVideos.length;

// Get all profiles as array (excluding current profile and dev-only profiles)
const allProfiles = Object.values(profiles).filter(p => {
  // Exclude current profile
  if (p.id === profileId) return false;
  
  // Exclude dev-only profiles from suggestions (always, even in development)
  if (p.devonly === true) return false;
  
  return true;
});

// Randomly select 3 creators for the Explore section
const shuffled = [...allProfiles].sort(() => Math.random() - 0.5);
const randomCreators = shuffled.slice(0, 3);
