---
import LayoutCreator from "@/layouts/LayoutCreator.astro";
import { useTranslations, type Language } from "@/i18n/translations";
import { profiles, type ContentType, getProfileUrl } from "@/data/profiles";

const { slug, id } = Astro.params;

// Get profile data first to check if it exists
const profile = profiles[id || ""];

// Validate slug matches the profile
if (!profile || profile.slug !== slug) {
  return Astro.redirect("/404");
}

// Check if profile is dev-only and we're not in development mode
const isDevelopment = import.meta.env.MODE === "development";
if (profile.devonly === true && !isDevelopment) {
  return Astro.redirect("/404");
}

// Use id as profileId for compatibility with rest of the code
const profileId = id;

// Set cookie to indicate user is in creator mode (only if profile exists)
Astro.cookies.set('qwb-creator-mode', 'true', {
  path: '/',
  maxAge: 60 * 60 * 24 * 365, // 1 year
  httpOnly: false, // Allow client-side access if needed
  sameSite: 'lax',
});

// Detect language from URL path
const pathname = Astro.url.pathname;
const lang: Language = pathname.startsWith('/fr/') || pathname === '/fr' ? 'fr' : 'en';
const t = useTranslations(lang);

// Debug mode: simulate different membership levels in development with ?debug=true&simulate=membership|all
const isDebugMode = import.meta.env.DEV && Astro.url.searchParams.has('debug');
const simulateMode = isDebugMode ? Astro.url.searchParams.get('simulate') : null;

// Check if debug=true to show media titles
const showMediaTitles = Astro.url.searchParams.get('debug') === 'true';

// Stripe debug secret: capture from URL params (?secret=XXX) for testing on production
const stripeDebugSecret = Astro.url.searchParams.get('secret');

// Check user authentication and access on server-side
let USER_PLAN: "free" | "membership" = "free";
let PURCHASED_VIDEO_IDS: string[] = [];

// Get access token from cookies (Astro.cookies is the proper way)
const accessToken = Astro.cookies.get('qwb_access_token')?.value;

if (accessToken) {
  try {
    // Verify token with backend to get memberships and purchased content
    const backendUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:5002';
    const response = await fetch(`${backendUrl}/auth/verify-token`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ token: accessToken }),
    });

    if (response.ok) {
      const data = await response.json();
      
      // Check if user has active membership for this profile
      if (data.data.valid && data.data.memberships) {
        const membership = data.data.memberships.find(
          (m: any) => m.profileId === profileId && (m.status === 'active' || m.status === 'trialing')
        );
        
        if (membership) {
          USER_PLAN = "membership";
        }
      }
      
      // Get purchased content for this profile
      if (data.data.purchasedContent) {
        PURCHASED_VIDEO_IDS = data.data.purchasedContent
          .filter((pc: any) => pc.profileId === profileId)
          .map((pc: any) => pc.videoId);
      }
    }
  } catch (error) {
    console.error('Error verifying token on server:', error);
    // Continue with USER_PLAN = "free" if verification fails
  }
}

// Format price helper
const formatPrice = (cents: number) => `$${(cents / 100).toFixed(2)}`;

// Calculate promotional price helper
const calculatePromotionalPrice = (originalPrice: number): number => {
  if (!profile.promotionPercentage || profile.promotionPercentage === 0) {
    return originalPrice;
  }
  return Math.round(originalPrice * (1 - profile.promotionPercentage / 100));
};

// Helper to determine if user has access to content
const hasAccess = (contentType: ContentType, videoId: string): boolean => {
  // Debug mode: simulate different membership levels
  if (isDebugMode) {
    if (simulateMode === 'all') {
      // Unlock all content (free, membership, and paid)
      return true;
    } else if (simulateMode === 'membership') {
      // Unlock free and membership content only
      return contentType === 'free' || contentType === 'membership';
    } else {
      // Default debug mode: unlock only free content
      return contentType === 'free';
    }
  }
  
  if (contentType === "free") return true;
  if (contentType === "membership") return USER_PLAN === "membership";
  if (contentType === "paid") return PURCHASED_VIDEO_IDS.includes(videoId);
  return false;
};

// Helper to get the appropriate filename based on access
const getVideoFilename = (
  contentType: ContentType,
  videoId: string,
  paidFilename: string,
  previewFilename: string
) => {
  return hasAccess(contentType, videoId) ? paidFilename : previewFilename;
};

// Keep original order from data file
const sortedVideos = [...profile.videos];

// Get all profiles as array (excluding current profile and dev-only profiles)
const allProfiles = Object.values(profiles).filter(p => {
  // Exclude current profile
  if (p.id === profileId) return false;
  
  // Exclude dev-only profiles from suggestions (always, even in development)
  if (p.devonly === true) return false;
  
  return true;
});

// Randomly select 3 creators for the Explore section
const shuffled = [...allProfiles].sort(() => Math.random() - 0.5);
const randomCreators = shuffled.slice(0, 3);
---

<LayoutCreator
  title={`${profile.displayName[lang]} - Qwibee`}
  description={profile.bio[lang]}
  lang={lang}
>
  <!-- Payment Verification Loading Overlay -->
  <div id="payment-verification-overlay" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="bg-white rounded-lg shadow-xl p-8 max-w-md mx-4">
        <div class="flex flex-col items-center text-center">
          <!-- Spinner -->
          <div class="w-16 h-16 border-4 border-brand-blue-200 border-t-brand-blue-500 rounded-full animate-spin mb-4"></div>
          
          <!-- Title -->
          <h3 id="verification-title" class="text-xl font-semibold text-gray-900 mb-2">
            Processing your payment...
          </h3>
          
          <!-- Message -->
          <p id="verification-message" class="text-gray-600 text-sm">
            Please wait while we verify your purchase. This usually takes just a few seconds.
          </p>
        </div>
      </div>
    </div>
  </div>

  <main class="pt-24 min-h-screen bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <!-- Success/Cancel Messages -->
      <div id="membership-status-message" class="mb-8 hidden">
        <div
          id="success-message"
          class="hidden bg-green-50 text-green-700 px-4 py-3 rounded-lg"
        >
          <div class="flex items-center gap-2.5">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-medium text-sm">{t.profile.subscriptionSuccessTitle}</h3>
              <p class="text-xs text-green-600">
                {t.profile.subscriptionSuccessMessage}
              </p>
            </div>
          </div>
        </div>
        <div
          id="cancel-message"
          class="hidden bg-yellow-50 text-yellow-700 px-4 py-3 rounded-lg"
        >
          <div class="flex items-center gap-2.5">
            <svg
              class="w-5 h-5 text-yellow-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
              ></path>
            </svg>
            <div>
              <h3 class="font-medium text-sm">{t.profile.subscriptionCancelledTitle}</h3>
              <p class="text-xs text-yellow-600">{t.profile.subscriptionCancelledMessage}</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Profile Header -->
      <section class="mb-12">
        <div class="flex flex-col items-center text-center mb-8 max-w-2xl mx-auto">
          <!-- Avatar -->
          <div
            class="w-32 h-32 rounded-full overflow-hidden bg-gray-100 flex items-center justify-center flex-shrink-0 mb-5"
          >
            {
              profile.avatar ? (
                <img
                  src={profile.avatar}
                  alt={profile.displayName[lang]}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="text-6xl">ðŸ‘¤</div>
              )
            }
          </div>

          <!-- Profile Info -->
          <div class="w-full">
            <h1 class="text-4xl font-bold mb-3 text-gray-900">
              {profile.displayName[lang]}
            </h1>
            <!-- <p class="text-base text-gray-500 mb-6 leading-relaxed">
              {profile.bio[lang]}
            </p> -->

            <!-- Membership Option -->
            {
              profile.membershipPrice !== undefined && (
                <div class="mb-4">
                  <div class="flex items-center justify-center gap-2 mb-3">
                    <svg class="w-5 h-5 text-brand-blue-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-sm text-gray-600 uppercase tracking-wider font-medium">
                      {profile.membershipPrice === 0 ? t.profile.follow || "Follow" : t.profile.membership}
                    </span>
                  </div>
                  
                  <!-- Full Width CTA Button -->
                  <button
                    id="membership-cta-btn"
                    data-profile-id={profile.id}
                    data-membership-price={profile.membershipPrice}
                    data-is-subscribed="false"
                    data-is-free={profile.membershipPrice === 0 ? "true" : "false"}
                    class="bg-gray-400 text-white font-semibold py-3.5 px-6 rounded-full transition-all flex items-center justify-between cursor-wait min-w-[280px] mx-auto"
                    disabled
                  >
                    <span id="membership-cta-text" class="flex items-center gap-2">
                      <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      {t.profile.loading}
                    </span>
                    <span id="membership-price-display" class="font-bold text-lg">
                      {profile.membershipPrice === 0 ? t.profile.free || "Free" : `${formatPrice(profile.membershipPrice)}${t.profile.perMonth}`}
                    </span>
                  </button>

                  <!-- Membership Status Info -->
                  <div id="membership-status-info" class="text-sm text-gray-500 mt-2 text-center hidden">
                    <span id="membership-status-text"></span>
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </section>

      <!-- Videos Grid -->
      <section>
        <h2 class="text-2xl font-bold mb-8 text-gray-900">
          {t.profile.videos}
        </h2>
        
        {/* Define function to render a video card */}
        {(() => {
          const renderVideoCard = (video: typeof sortedVideos[0]) => {
            const userHasAccess = hasAccess(video.type, video.id);
            const videoFilename = getVideoFilename(
              video.type,
              video.id,
              video.paidFilename,
              video.previewFilename
            );
            // For thumbnails, only show what the user has access to (don't leak paid URLs)
            const thumbnailFilename = userHasAccess 
              ? (video.paidThumbnail || video.paidFilename)
              : (video.previewThumbnail || video.previewFilename);
            const isImage = video.mimetype?.startsWith('image/');

            return (
              <div
                class="group video-card cursor-pointer mb-6"
                data-video-type={video.type}
                data-video-id={video.id}
              >
                  {/* Video/Image Preview */}
                  <div class="bg-gray-100 relative rounded-lg overflow-hidden mb-3 video-container">
                    {isImage ? (
                      <img
                        class="w-full object-cover video-player"
                        src={`/uploads/${profile.id}/${videoFilename}`}
                        alt={video.title[lang]}
                        data-paid-src={`/uploads/${profile.id}/${video.paidFilename}`}
                        data-preview-src={`/uploads/${profile.id}/${video.previewFilename}`}
                        data-has-access={userHasAccess ? "true" : "false"}
                      />
                    ) : (
                      <>
                        {/* Thumbnail image - shown by default */}
                        <img
                          class="video-thumbnail w-full object-cover"
                          src={`/uploads/${profile.id}/${thumbnailFilename}`}
                          alt={video.title[lang]}
                        />
                        {/* Video player - hidden by default, loaded on click */}
                        <video
                          class="w-full object-cover video-player bg-black hidden"
                          controls
                          preload="none"
                          data-video-src={`/uploads/${profile.id}/${videoFilename}`}
                          data-mimetype={video.mimetype || "video/mp4"}
                        >
                        </video>
                      </>
                    )}

                    {/* Content Type Badge - Hidden by default, shown only for subscribed users, removed when unlocked */}
                    {(video.type === "membership" || video.type === "paid") && !userHasAccess && (
                      <div class={`content-type-badge absolute top-2 left-2 text-white text-xs font-bold px-2.5 py-1 rounded ${
                        video.type === "membership" ? "bg-blue-500" : "bg-orange-500"
                      }`} style="display: none;" data-video-type={video.type}>
                        {video.type === "membership" ? "Members" : profile.promotionPercentage ? `-${profile.promotionPercentage}%` : ""}
                      </div>
                    )}

                    {/* Custom Play Icon - shown in center, clickable - only for videos */}
                    {!isImage && (
                      <div class="custom-play-icon absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-black/60 text-white p-4 rounded-full cursor-pointer hover:bg-black/75 transition-all">
                        <svg
                          class="w-8 h-8"
                          fill="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            d="M8 5v14l11-7z"
                          />
                        </svg>
                      </div>
                    )}

                    {/* Lock Icon - shown in bottom left for locked content */}
                    {!userHasAccess && (
                      <div class="lock-icon absolute bottom-2 left-2 bg-black/70 text-white p-2 rounded-full">
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                          />
                        </svg>
                      </div>
                    )}

                    {video.duration && !isImage && (
                      <div class="video-duration absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-0.5 rounded">
                        {video.duration}
                      </div>
                    )}
                  </div>

                  {/* Video Info */}
                  <div>
                    {showMediaTitles && (
                      <h3 class="text-base font-semibold text-gray-900 mb-1 line-clamp-1">
                        {video.title[lang]}
                      </h3>
                    )}
                    
                    {/* Pricing/Status line - show for unlocked content or paid content */}
                    <div class="flex items-center justify-between mb-1.5 video-status-line">
                      {/* Unlocked badge - shown for unlocked content */}
                      {userHasAccess ? (
                        <span class="unlocked-badge text-green-600 font-medium text-sm flex items-center gap-1">
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          {t.profile.unlocked}
                        </span>
                      ) : (
                        <>
                          {/* Hidden unlocked badge - will be shown by JS when content is unlocked */}
                          <span class="unlocked-badge text-green-600 font-medium text-sm items-center gap-1 hidden">
                            <svg
                              class="w-4 h-4"
                              fill="currentColor"
                              viewBox="0 0 20 20"
                            >
                              <path
                                fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"
                              />
                            </svg>
                            {t.profile.unlocked}
                          </span>
                        </>
                      )}
                      
                      {/* Pricing and buy button for locked paid content - hidden by default, shown only when subscribed */}
                      {!userHasAccess && video.type === "paid" && (
                        <div class="paid-content-pricing flex items-center gap-4" style="display: none;">
                          <div class="flex items-baseline gap-2">
                            {!!(profile.promotionPercentage && profile.promotionPercentage > 0) && (
                              <span class="text-gray-400 line-through text-sm">{formatPrice(video.price)}</span>
                            )}
                            <span class="locked-label text-brand-blue-500 font-bold text-lg">
                              {formatPrice(calculatePromotionalPrice(video.price))}
                            </span>
                          </div>
                          {/* Action Button for paid content */}
                          <button class="action-button bg-brand-blue-500 hover:bg-brand-blue-600 text-white font-semibold py-1.5 px-4 rounded-full transition-all text-sm">
                            {isImage ? t.profile.buyImage : t.profile.buyVideo}
                          </button>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              );
            };

            return (
              <>
                {/* Mobile: Single column */}
                <div class="flex flex-col md:hidden">
                  {sortedVideos.map(renderVideoCard)}
                </div>

                {/* Tablet: 2 columns */}
                <div class="hidden md:flex lg:hidden gap-6">
                  {[0, 1].map((colIndex) => (
                    <div class="flex-1 flex flex-col">
                      {sortedVideos
                        .filter((_, index) => index % 2 === colIndex)
                        .map(renderVideoCard)}
                    </div>
                  ))}
                </div>

                {/* Desktop: 3 columns */}
                <div class="hidden lg:flex gap-6">
                  {[0, 1, 2].map((colIndex) => (
                    <div class="flex-1 flex flex-col">
                      {sortedVideos
                        .filter((_, index) => index % 3 === colIndex)
                        .map(renderVideoCard)}
                    </div>
                  ))}
                </div>
              </>
            );
          })()}
      </section>
    </div>

    <!-- Explore Creators Section -->
    <section id="explore-creators" class="py-20 px-6 bg-gray-50">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4"
          >
            Explore
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            randomCreators.map((exploreProfile) => (
              <a
                href={getProfileUrl(exploreProfile.id, lang)}
                class="group bg-white border border-gray-200 rounded-2xl overflow-hidden hover:border-brand-blue-500 hover:shadow-xl transition-all duration-300 hover:transform hover:-translate-y-1"
              >
                <div class="aspect-square bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center overflow-hidden">
                  {exploreProfile.avatar ? (
                    <img
                      src={exploreProfile.avatar}
                      alt={exploreProfile.displayName[lang]}
                      class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-300"
                    />
                  ) : (
                    <div class="text-6xl">ðŸ‘¤</div>
                  )}
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-brand-blue-500 transition-colors">
                    {exploreProfile.displayName[lang]}
                  </h3>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">
                      {exploreProfile.videos.length} {t.profile.videos}
                    </span>
                    {exploreProfile.membershipPrice !== undefined && (
                      <span class="text-brand-blue-500 font-semibold">
                        {exploreProfile.membershipPrice === 0 
                          ? "Free" 
                          : `$${(exploreProfile.membershipPrice / 100).toFixed(2)}${t.profile.perMonth}`
                        }
                      </span>
                    )}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </main>

  <!-- Pass minimal data to client-side script -->
  <script
    define:vars={{
      pageData: {
        profileId: profile.id,
        displayName: profile.displayName,
        promotionPercentage: profile.promotionPercentage || 0,
        videos: sortedVideos.map((v) => ({ 
          id: v.id, 
          title: v.title,
          price: v.price,
        })),
        debug: {
          isDebugMode,
          simulateMode,
        },
        stripeDebugSecret: stripeDebugSecret || null,
      },
    }}
  >
    // Data is now available in the pageData variable
    window.__profilePageData = pageData;
  </script>

  <!-- Initialize the page with the external script -->
  <script>
    /* import to keep the full path for generated /fr files */
    import { initProfilePage } from "@/pages/u/[slug]/[id]/profilePage.script.ts";
    import type { ProfilePageData } from "@/pages/u/[slug]/[id]/profilePage.script.ts";
    
    if (window.__profilePageData) {
      initProfilePage(window.__profilePageData as ProfilePageData);
    }
  </script>

  <!-- Fix fullscreen video aspect ratio -->
  <style is:global>
    /* Ensure videos use object-contain in fullscreen mode to preserve aspect ratio */
    video:fullscreen,
    video:-webkit-full-screen,
    video:-moz-full-screen,
    video:-ms-fullscreen {
      object-fit: contain !important;
    }
  </style>
</LayoutCreator>
