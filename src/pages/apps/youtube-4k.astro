---
import LayoutApp from "@/layouts/LayoutApp.astro";
import { useTranslations, type Language } from "@/i18n/translations";

// Detect language from URL path
const pathname = Astro.url.pathname;
const lang: Language =
  pathname.startsWith("/fr/") || pathname === "/fr" ? "fr" : "en";
const t = useTranslations(lang);
---

<LayoutApp
  title="Download YouTube Videos in 4K on macOS - WatchMeFans"
  description="Complete guide to download YouTube videos in 4K, audio only (MP3), and extract screenshots using terminal commands on macOS."
  lang={lang}
>
  <main class="pt-24 pb-12 min-h-screen tutorial-main">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Back Button -->
      <a
        href="/apps"
        class="back-link inline-flex items-center gap-2 mb-8 text-cyan-400 hover:text-cyan-300 transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Apps & Tutorials
      </a>

      <!-- Header -->
      <div class="tutorial-header mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="tutorial-icon">üé•</div>
          <div>
            <h1 class="text-4xl font-bold text-white glitch-text mb-2">
              Download YouTube Videos in 4K on macOS
            </h1>
            <div class="flex gap-2 flex-wrap">
              <span class="badge-tutorial">Tutorial</span>
              <span class="badge-platform">macOS</span>
            </div>
          </div>
        </div>
        <p class="text-gray-300 text-lg leading-relaxed">
          Complete guide to download YouTube videos in 4K quality, extract audio
          only (MP3), and capture screenshots using terminal commands on macOS.
        </p>
      </div>

      <!-- Section 1: Installation -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">1</span>
          Install Required Tools
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Step 1</span>
            <h3 class="step-title">Install Homebrew</h3>
          </div>
          <p class="step-content mb-3">
            If you don't have Homebrew installed, run this command in your
            terminal:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="homebrew-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="homebrew-code"><code>{`/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Step 2</span>
            <h3 class="step-title">Install yt-dlp and ffmpeg</h3>
          </div>
          <p class="step-content mb-3">
            Install the required tools for downloading and processing videos:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="install-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="install-code"><code>{`brew install yt-dlp ffmpeg`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Step 3</span>
            <h3 class="step-title">Verify Installation</h3>
          </div>
          <p class="step-content mb-3">
            Check that everything is installed correctly:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="verify-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="verify-code"><code>{`yt-dlp --version
ffmpeg -version`}</code></pre>
          </div>
        </div>
      </div>

      <!-- Section 2: Download Videos -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">2</span>
          Download Videos
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">4K Quality</span>
            <h3 class="step-title">Download in 4K (MP4)</h3>
          </div>
          <p class="step-content mb-3">
            Download the best 4K video with audio, automatically merged:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="4k-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="4k-code"><code>{`yt-dlp -f "bestvideo[height<=2160]+bestaudio" --merge-output-format mp4 VIDEO_URL`}</code></pre>
          </div>
          <p class="step-note">
            üí° Replace <code class="inline-code">VIDEO_URL</code> with the YouTube
            video URL
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Best Quality</span>
            <h3 class="step-title">Download Best Available Quality</h3>
          </div>
          <p class="step-content mb-3">
            Auto-select the best quality available:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="best-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre id="best-code"><code>{`yt-dlp -f best VIDEO_URL`}</code></pre>
          </div>
        </div>
      </div>

      <!-- Section 3: Audio Only -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">3</span>
          Audio Download
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">MP3</span>
            <h3 class="step-title">Download Audio as MP3</h3>
          </div>
          <p class="step-content mb-3">
            Extract and convert audio to MP3 format:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="mp3-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="mp3-code"><code>{`yt-dlp -x --audio-format mp3 VIDEO_URL`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">High Quality</span>
            <h3 class="step-title">Best Audio Quality MP3</h3>
          </div>
          <p class="step-content mb-3">
            Download with maximum audio quality (0 = best):
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="mp3-hq-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="mp3-hq-code"><code>{`yt-dlp -x --audio-format mp3 --audio-quality 0 VIDEO_URL`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Original</span>
            <h3 class="step-title">Original Audio Format</h3>
          </div>
          <p class="step-content mb-3">Download audio without conversion:</p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="audio-orig-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="audio-orig-code"><code>{`yt-dlp -f bestaudio VIDEO_URL`}</code></pre>
          </div>
        </div>
      </div>

      <!-- Section 4: Screenshots -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">4</span>
          Extract Screenshots
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Single Frame</span>
            <h3 class="step-title">Extract Frame at Specific Time</h3>
          </div>
          <p class="step-content mb-3">Extract a single frame at 5 seconds:</p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="frame-5s-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="frame-5s-code"><code>{`ffmpeg -ss 00:00:05 -i video.mp4 -frames:v 1 screenshot.png`}</code></pre>
          </div>
          <p class="step-note">
            üí° Use format <code class="inline-code">HH:MM:SS</code> for timestamp
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Custom Time</span>
            <h3 class="step-title">Extract at Custom Timestamp</h3>
          </div>
          <p class="step-content mb-3">
            Extract a frame at 1 minute 30 seconds:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="frame-custom-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="frame-custom-code"><code>{`ffmpeg -ss 00:01:30 -i video.mp4 -frames:v 1 frame.png`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Multiple</span>
            <h3 class="step-title">Extract Multiple Screenshots</h3>
          </div>
          <p class="step-content mb-3">
            Extract 1 frame per second from the entire video:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="frames-multi-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="frames-multi-code"><code>{`ffmpeg -i video.mp4 -vf fps=1 frames_%03d.png`}</code></pre>
          </div>
        </div>
      </div>

      <!-- Important Notes -->
      <div class="warning-box mb-8">
        <div class="warning-icon">‚ö†Ô∏è</div>
        <div>
          <h3 class="warning-title">Important Notes</h3>
          <ul class="warning-list">
            <li>
              4K videos are usually split into video-only and audio-only streams
              - they're merged automatically using ffmpeg
            </li>
            <li>
              4K video files are very large (often several GB) - this is normal
              for high-quality content
            </li>
            <li>
              <strong>Legal Notice:</strong> Only download videos you own or have
              permission to use. Respect copyright laws.
            </li>
          </ul>
        </div>
      </div>

      <!-- Tip Box -->
      <div class="tip-box">
        <div class="tip-icon">üí°</div>
        <div>
          <h3 class="tip-title">Pro Tips</h3>
          <ul class="tip-list">
            <li>
              Use <code class="inline-code">yt-dlp --help</code> to see all available
              options
            </li>
            <li>
              Add <code class="inline-code">-o "%(title)s.%(ext)s"</code> to save
              with the video title as filename
            </li>
            <li>
              Check available formats with <code class="inline-code"
                >yt-dlp -F VIDEO_URL</code
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>

  <style>
    /* Main Content */
    .tutorial-main {
      position: relative;
      z-index: 10;
      background: transparent;
    }

    /* Back Link */
    .back-link {
      font-size: 0.95rem;
      font-weight: 500;
    }

    /* Tutorial Header */
    .tutorial-header {
      padding: 2rem;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 0, 255, 0.3);
      border-radius: 1rem;
      box-shadow:
        0 0 30px rgba(255, 0, 255, 0.2),
        0 0 60px rgba(0, 255, 255, 0.1);
    }

    .tutorial-icon {
      font-size: 4rem;
      line-height: 1;
    }

    /* Badges */
    .badge-tutorial {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      font-size: 0.75rem;
      font-weight: 600;
      background: rgba(0, 255, 255, 0.15);
      border: 1px solid rgba(0, 255, 255, 0.4);
      color: rgba(0, 255, 255, 0.9);
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      border-radius: 9999px;
    }

    .badge-platform {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      font-size: 0.75rem;
      font-weight: 600;
      background: rgba(255, 0, 255, 0.15);
      border: 1px solid rgba(255, 0, 255, 0.4);
      color: rgba(255, 0, 255, 0.9);
      text-shadow: 0 0 10px rgba(255, 0, 255, 0.5);
      border-radius: 9999px;
    }

    /* Section Title */
    .section-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      font-size: 1.75rem;
      font-weight: 700;
      color: white;
      margin-bottom: 1.5rem;
    }

    .step-number {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 3rem;
      height: 3rem;
      background: rgba(255, 0, 255, 0.2);
      border: 2px solid rgba(255, 0, 255, 0.5);
      border-radius: 0.75rem;
      font-size: 1.5rem;
      font-weight: 700;
      color: rgba(255, 0, 255, 1);
      text-shadow: 0 0 15px rgba(255, 0, 255, 0.8);
    }

    /* Step Card */
    .step-card {
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(0, 255, 255, 0.3);
      border-radius: 0.75rem;
      padding: 1.5rem;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
    }

    .step-card:hover {
      border-color: rgba(0, 255, 255, 0.5);
      box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
    }

    .step-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.75rem;
    }

    .step-badge {
      padding: 0.25rem 0.625rem;
      font-size: 0.75rem;
      font-weight: 600;
      background: rgba(0, 255, 255, 0.2);
      border: 1px solid rgba(0, 255, 255, 0.5);
      color: rgba(0, 255, 255, 1);
      border-radius: 0.375rem;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.6);
      white-space: nowrap;
    }

    .step-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: white;
    }

    .step-content {
      color: #d1d5db;
      line-height: 1.6;
    }

    .step-note {
      margin-top: 0.75rem;
      padding: 0.75rem;
      background: rgba(0, 255, 255, 0.1);
      border-left: 3px solid rgba(0, 255, 255, 0.5);
      border-radius: 0.375rem;
      color: #d1d5db;
      font-size: 0.9rem;
    }

    /* Inline Code */
    .inline-code {
      padding: 0.125rem 0.5rem;
      font-size: 0.875rem;
      font-family: ui-monospace, monospace;
      background: rgba(255, 0, 255, 0.15);
      border: 1px solid rgba(255, 0, 255, 0.3);
      border-radius: 0.25rem;
      color: rgba(255, 0, 255, 0.9);
    }

    /* Code Block */
    .code-block {
      background: rgba(0, 0, 0, 0.7);
      border: 1px solid rgba(0, 255, 255, 0.4);
      border-radius: 0.75rem;
      overflow: hidden;
      margin-top: 0.75rem;
    }

    .code-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 1rem;
      background: rgba(0, 0, 0, 0.5);
      border-bottom: 1px solid rgba(0, 255, 255, 0.3);
    }

    .code-language {
      font-size: 0.75rem;
      font-weight: 600;
      color: rgba(0, 255, 255, 0.8);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .copy-button {
      display: flex;
      align-items: center;
      gap: 0.375rem;
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
      font-weight: 500;
      background: rgba(255, 0, 255, 0.2);
      border: 1px solid rgba(255, 0, 255, 0.4);
      border-radius: 0.375rem;
      color: rgba(255, 0, 255, 0.9);
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .copy-button:hover {
      background: rgba(255, 0, 255, 0.3);
      border-color: rgba(255, 0, 255, 0.6);
    }

    .code-block pre {
      margin: 0;
      padding: 1.25rem;
      overflow-x: auto;
    }

    .code-block code {
      font-family: ui-monospace, monospace;
      font-size: 0.875rem;
      line-height: 1.6;
      color: #e5e7eb;
    }

    /* Warning Box */
    .warning-box {
      display: flex;
      gap: 1rem;
      padding: 1.5rem;
      background: rgba(255, 165, 0, 0.1);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 165, 0, 0.4);
      border-radius: 0.75rem;
      box-shadow: 0 0 20px rgba(255, 165, 0, 0.15);
    }

