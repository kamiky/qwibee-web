---
import LayoutApp from "@/layouts/LayoutApp.astro";
import { useTranslations, type Language } from "@/i18n/translations";

// Redirect to / if in creator mode
const creatorMode = Astro.cookies.get("qwb-creator-mode");
if (creatorMode) {
  return Astro.redirect("/");
}

// Detect language from URL path
const pathname = Astro.url.pathname;
const lang: Language =
  pathname.startsWith("/fr/") || pathname === "/fr" ? "fr" : "en";
const t = useTranslations(lang);
---

<LayoutApp
  title="How to Put MacBook to Sleep & Shutdown Commands - Qwibee"
  description="Complete guide to macOS sleep, shutdown, and power management commands. Learn how to schedule shutdowns, put your Mac to sleep, and create custom aliases."
  lang={lang}
>
  <main class="pt-24 pb-12 min-h-screen tutorial-main">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Back Button -->
      <a
        href="/apps"
        class="back-link inline-flex items-center gap-2 mb-8 text-cyan-400 hover:text-cyan-300 transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Apps & Tutorials
      </a>

      <!-- Header -->
      <div class="tutorial-header mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="tutorial-icon">üí§</div>
          <div>
            <h1 class="text-4xl font-bold text-white glitch-text mb-2">
              MacBook Sleep & Shutdown Commands
            </h1>
            <div class="flex gap-2 flex-wrap">
              <span class="badge-tutorial">Tutorial</span>
              <span class="badge-platform">macOS</span>
            </div>
          </div>
        </div>
        <p class="text-gray-300 text-lg leading-relaxed">
          Master macOS power management with terminal commands. Learn how to
          schedule shutdowns, put your Mac to sleep instantly, and create
          custom shortcuts for quick access.
        </p>
      </div>

      <!-- Section 1: Sleep Commands -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">1</span>
          Sleep Your Mac
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Instant Sleep</span>
            <h3 class="step-title">Put Mac to Sleep Now</h3>
          </div>
          <p class="step-content mb-3">
            Instantly put your Mac to sleep without shutdown:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="sleep-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre id="sleep-code"><code>{`sudo pmset sleepnow`}</code></pre>
          </div>
          <p class="step-note">
            üí° This command puts your Mac to sleep immediately, preserving all
            your open applications and work.
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Scheduled Sleep</span>
            <h3 class="step-title">Sleep with Delay</h3>
          </div>
          <p class="step-content mb-3">
            Schedule your Mac to sleep after a specific number of minutes:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="sleep-delay-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="sleep-delay-code"><code>{`sudo shutdown -s +30`}</code></pre>
          </div>
          <p class="step-note">
            üí° Replace <code class="inline-code">30</code> with the number of minutes
            before sleep. The <code class="inline-code">-s</code> flag means sleep
            mode instead of shutdown.
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Specific Time</span>
            <h3 class="step-title">Sleep at Specific Time</h3>
          </div>
          <p class="step-content mb-3">
            Schedule your Mac to sleep at a specific time (24-hour format):
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="sleep-time-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="sleep-time-code"><code>{`sudo shutdown -s 23:00`}</code></pre>
          </div>
          <p class="step-note">
            üí° Use 24-hour format. Example: <code class="inline-code">23:00</code>
            for 11 PM, <code class="inline-code">01:00</code> for 1 AM.
          </p>
        </div>
      </div>

      <!-- Section 2: Shutdown Commands -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">2</span>
          Shutdown Commands
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Immediate</span>
            <h3 class="step-title">Shutdown Now</h3>
          </div>
          <p class="step-content mb-3">
            Shutdown your Mac immediately and power off:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="shutdown-now-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="shutdown-now-code"><code>{`sudo shutdown -h now`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Delayed</span>
            <h3 class="step-title">Shutdown with Delay</h3>
          </div>
          <p class="step-content mb-3">
            Schedule a shutdown after a specific number of minutes:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button
                class="copy-button"
                data-copy-target="shutdown-delay-code"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="shutdown-delay-code"><code>{`sudo shutdown -h +30`}</code></pre>
          </div>
          <p class="step-note">
            üí° Replace <code class="inline-code">30</code> with the number of minutes
            before shutdown. Example: <code class="inline-code">+60</code> for 1
            hour.
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Scheduled</span>
            <h3 class="step-title">Shutdown at Specific Time</h3>
          </div>
          <p class="step-content mb-3">
            Schedule a shutdown at a specific time (24-hour format):
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="shutdown-time-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="shutdown-time-code"><code>{`sudo shutdown -h 23:00`}</code></pre>
          </div>
          <p class="step-note">
            üí° Use 24-hour format. Example: <code class="inline-code"
              >23:00</code
            > for 11 PM, <code class="inline-code">14:30</code> for 2:30 PM.
          </p>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Cancel</span>
            <h3 class="step-title">Cancel Scheduled Shutdown or Sleep</h3>
          </div>
          <p class="step-content mb-3">
            Cancel a previously scheduled shutdown or sleep:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button
                class="copy-button"
                data-copy-target="shutdown-cancel-code"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre
              id="shutdown-cancel-code"><code>{`sudo shutdown -c`}</code></pre>
          </div>
          <p class="step-note">
            üí° This works for both <code class="inline-code">shutdown -h</code> and
            <code class="inline-code">shutdown -s</code> scheduled commands.
          </p>
        </div>
      </div>

      <!-- Section 3: Quick Power Off -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">3</span>
          Alternative Power Off Commands
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Fast</span>
            <h3 class="step-title">Quick Halt</h3>
          </div>
          <p class="step-content mb-3">
            Immediately halt the system and power off:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="halt-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre id="halt-code"><code>{`sudo halt`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Alternative</span>
            <h3 class="step-title">Power Off Command</h3>
          </div>
          <p class="step-content mb-3">Another way to power off immediately:</p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="poweroff-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre id="poweroff-code"><code>{`sudo poweroff`}</code></pre>
          </div>
        </div>
      </div>

      <!-- Section 4: Create Aliases -->
      <div class="tutorial-section mb-8">
        <h2 class="section-title">
          <span class="step-number">4</span>
          Create Custom Aliases
        </h2>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Setup</span>
            <h3 class="step-title">Windows-Style Shortcuts</h3>
          </div>
          <p class="step-content mb-3">
            Create Windows-style shutdown commands by adding aliases to your
            shell configuration:
          </p>
          <div class="code-block">
            <div class="code-header">
              <span class="code-language">bash</span>
              <button class="copy-button" data-copy-target="alias-code">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
                Copy
              </button>
            </div>
            <pre id="alias-code"><code>{`# Open your shell configuration
nano ~/.zshrc

# Add these aliases at the end
alias shutdown-s='sudo shutdown -h now'
alias shutdown-t='sudo shutdown -h'
alias sleep-s='sudo shutdown -s'
alias sleepnow='sudo pmset sleepnow'

# Save and reload
source ~/.zshrc`}</code></pre>
          </div>
        </div>

        <div class="step-card">
          <div class="step-header">
            <span class="step-badge">Usage</span>
            <h3 class="step-title">Using Your New Aliases</h3>
          </div>
          <p class="step-content">After setting up aliases, you can use:</p>
          <ul class="command-list">
            <li>
              <code class="inline-code">shutdown-s</code> - Shutdown immediately
            </li>
            <li>
              <code class="inline-code">shutdown-t +30</code> - Shutdown in 30
              minutes
            </li>
            <li>
              <code class="inline-code">sleep-s +30</code> - Sleep in 30 minutes
            </li>
            <li>
              <code class="inline-code">sleepnow</code> - Put Mac to sleep
              immediately
            </li>
          </ul>
        </div>
      </div>

      <!-- Important Notes -->
      <div class="warning-box mb-8">
        <div class="warning-icon">‚ö†Ô∏è</div>
        <div>
          <h3 class="warning-title">Important Notes</h3>
          <ul class="warning-list">
            <li>
              All shutdown and power commands require <code class="inline-code"
                >sudo</code
              > (administrator privileges)
            </li>
            <li>
              Make sure to save all your work before running shutdown commands
            </li>
            <li>
              Sleep mode preserves your work but still drains battery slowly
            </li>
            <li>
              For long-term storage, shutdown is better than sleep mode to
              preserve battery health
            </li>
          </ul>
        </div>
      </div>

      <!-- Tip Box -->
      <div class="tip-box">
        <div class="tip-icon">üí°</div>
        <div>
          <h3 class="tip-title">Pro Tips</h3>
          <ul class="tip-list">
            <li>
              Use <code class="inline-code">pmset -g</code> to view all power management
              settings
            </li>
            <li>
              Schedule recurring shutdowns using <code class="inline-code"
                >pmset schedule</code
              > for automated power management
            </li>
            <li>
              Press <kbd>Control+C</kbd> in Terminal to cancel a running shutdown
              countdown
            </li>
            <li>
              For laptops, closing the lid automatically triggers sleep mode
              unless configured otherwise
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>

  <style>
