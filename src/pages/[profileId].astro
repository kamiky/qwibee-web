---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";
import { useTranslations } from "@/i18n/translations";
import { profiles, type ContentType } from "@/data/profiles";

const { profileId } = Astro.params;
const lang = "en";
const t = useTranslations(lang);

// Temporary constant for user plan - will be replaced with actual user data later
const USER_PLAN = "free" as "free" | "membership"; // Options: 'free', 'membership', 'premium'
const PURCHASED_VIDEO_IDS: string[] = []; // IDs of individually purchased videos

// Get profile data
const profile = profiles[profileId || ""];

// Return 404 if profile not found
if (!profile) {
  return Astro.redirect("/404");
}

// Format price helper
const formatPrice = (cents: number) => `$${(cents / 100).toFixed(2)}`;

// Helper to determine if user has access to content
const hasAccess = (contentType: ContentType, videoId: string): boolean => {
  if (contentType === "free") return true;
  if (contentType === "membership") return USER_PLAN === "membership";
  if (contentType === "paid") return PURCHASED_VIDEO_IDS.includes(videoId);
  return false;
};

// Helper to get the appropriate filename based on access
const getVideoFilename = (
  contentType: ContentType,
  videoId: string,
  paidFilename: string,
  previewFilename: string
) => {
  return hasAccess(contentType, videoId) ? paidFilename : previewFilename;
};

// Helper to get content label
const getContentLabel = (contentType: ContentType) => {
  if (contentType === "free") return "ðŸ†“ FREE";
  if (contentType === "membership") return "ðŸ‘‘ MEMBERS ONLY";
  if (contentType === "paid") return "ðŸ’Ž PAY-PER-VIEW";
  return "";
};
---

<Layout
  title={`${profile.displayName[lang]} - WatchMeFans`}
  description={profile.bio[lang]}
  lang={lang}
>
  <Header lang={lang} />
  <LanguageSwitcher lang={lang} />

  <main
    class="pt-24 pb-12 min-h-screen bg-gradient-to-br from-gray-50 to-gray-100"
  >
    <div class="max-w-6xl mx-auto px-6">
      <!-- Profile Header -->
      <section class="mb-12">
        <div class="flex items-start gap-8 mb-8">
          <!-- Avatar -->
          <div
            class="w-32 h-32 rounded-full overflow-hidden bg-gradient-to-br from-brand-blue-500 to-purple-500 flex items-center justify-center flex-shrink-0 shadow-lg"
          >
            {
              profile.avatar ? (
                <img
                  src={profile.avatar}
                  alt={profile.displayName[lang]}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="text-6xl">ðŸ‘¤</div>
              )
            }
          </div>

          <!-- Profile Info -->
          <div class="flex-1">
            <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 text-gray-900">
              {profile.displayName[lang]}
            </h1>
            <p class="text-xl text-gray-600 mb-6">
              {profile.bio[lang]}
            </p>

            <!-- Membership Option -->
            {
              profile.membershipPrice && (
                <div class="bg-gradient-to-r from-blue-50 to-purple-50 border border-brand-blue-200 rounded-xl p-6 mb-4 shadow-md">
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="text-2xl font-bold text-gray-900 mb-2">
                        {t.profile.membership}
                      </h3>
                      <p class="text-gray-700">
                        Access all videos for{" "}
                        <span class="text-brand-blue-500 font-bold text-xl">
                          {formatPrice(profile.membershipPrice)}
                          {t.profile.perMonth}
                        </span>
                      </p>
                    </div>
                    <button class="bg-brand-blue-500 hover:bg-brand-blue-600 text-white font-bold py-3 px-8 rounded-full transition-all transform hover:scale-105 shadow-lg">
                      {t.profile.subscribeCta}
                    </button>
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </section>

      <!-- Videos Grid -->
      <section>
        <h2 class="text-3xl font-bold mb-8 text-gray-900">
          {t.profile.videos}
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            profile.videos.map((video) => {
              const userHasAccess = hasAccess(video.type, video.id);
              const videoFilename = getVideoFilename(
                video.type,
                video.id,
                video.paidFilename,
                video.previewFilename
              );
              const contentLabel = getContentLabel(video.type);

              return (
                <div class="bg-white border border-gray-200 rounded-xl overflow-hidden hover:border-brand-blue-500 hover:shadow-xl transition-all group">
                  {/* Video Preview */}
                  <div class="aspect-video bg-gradient-to-br from-blue-50 to-purple-50 relative">
                    <video
                      class="w-full h-full object-cover"
                      preload="metadata"
                      poster={video.thumbnail}
                      controls={userHasAccess}
                    >
                      <source
                        src={`/uploads/${profile.id}/${videoFilename}#t=0.1`}
                        type="video/mp4"
                      />
                    </video>

                    {/* Content Type Badge */}
                    <div class="absolute top-2 left-2 bg-black/80 text-white text-xs font-bold px-3 py-1 rounded-full">
                      {contentLabel}
                    </div>

                    {/* Lock Icon for locked content */}
                    {!userHasAccess && (
                      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-black/70 text-white p-4 rounded-full">
                        <svg
                          class="w-8 h-8"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                          />
                        </svg>
                      </div>
                    )}

                    {video.duration && (
                      <div class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-2 py-1 rounded">
                        {video.duration}
                      </div>
                    )}
                  </div>

                  {/* Video Info */}
                  <div class="p-4">
                    <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-1">
                      {video.title[lang]}
                    </h3>
                    <p class="text-sm text-gray-600 mb-4 line-clamp-2">
                      {video.description[lang]}
                    </p>

                    <div class="flex items-center justify-between">
                      {/* Price/Access Info */}
                      {userHasAccess ? (
                        <span class="text-green-600 font-bold text-sm flex items-center gap-1">
                          <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          UNLOCKED
                        </span>
                      ) : (
                        <span class="text-brand-blue-500 font-bold text-lg">
                          {video.type === "paid"
                            ? formatPrice(video.price)
                            : video.type === "membership"
                              ? "Members"
                              : "Free"}
                        </span>
                      )}

                      {/* Action Button */}
                      {!userHasAccess && (
                        <button class="bg-brand-blue-500 hover:bg-brand-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition-all">
                          {video.type === "paid"
                            ? t.profile.buyVideo
                            : video.type === "membership"
                              ? "Subscribe"
                              : "Watch"}
                        </button>
                      )}
                    </div>
                  </div>
                </div>
              );
            })
          }
        </div>
      </section>
    </div>
  </main>

  <Footer lang={lang} />

  <script>
    // Add smooth scroll behavior
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener("click", (e) => {
        e.preventDefault();
        const href = anchor.getAttribute("href");
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }
        }
      });
    });
  </script>
</Layout>
