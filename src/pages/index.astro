---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";
import { useTranslations, type Language } from "@/i18n/translations";
import { profiles } from "@/data/profiles";

const lang: Language = "en";
const t = useTranslations(lang);

// Check if we're in production mode
const isProduction = import.meta.env.MODE === "production";

// Get all profiles as array
const allProfiles = Object.values(profiles);

// Get profile1 avatar for hero images
const profile1Avatar = profiles.uk8txjwcahv743xag2q9w.avatar || "/placeholder-avatar.jpg";

// Helper function to generate profile URL based on language
const getProfileUrl = (profileId: string) => {
  return (lang as string) === "en" ? `/${profileId}` : `/${lang}/${profileId}`;
};
---

<Layout
  title={t.seo.home.title}
  description={t.seo.home.description}
  lang={lang}
>
  {isProduction ? (
    <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center">
      <div class="text-center px-6">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Please wait, website is not ready for production yet...</h1>
      </div>
    </main>
  ) : (
    <>
      <Header lang={lang} />
      <LanguageSwitcher lang={lang} />

      <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8">
            <h1
              class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight"
            >
              {t.hero.title}
            </h1>
            <p
              class="text-lg sm:text-xl text-gray-600 leading-relaxed max-w-xl"
            >
              {t.hero.subtitle}
            </p>
            <div>
              <a
                href="#creators"
                class="inline-flex items-center justify-center bg-brand-blue-500 hover:bg-brand-blue-600 text-white font-semibold py-4 px-10 rounded-full transition-all transform hover:scale-105 shadow-lg hover:shadow-xl"
              >
                {t.hero.cta}
              </a>
            </div>
          </div>

          <!-- Right Content - Creator Images -->
          <div class="relative hidden lg:flex items-center justify-center">
            <div
              class="relative w-full h-[600px] flex items-center justify-end gap-6"
            >
              <!-- Image 1 - Left -->
              <div
                class="relative w-64 h-96 rounded-3xl overflow-hidden shadow-2xl transform -rotate-6 hover:rotate-0 transition-transform duration-300"
              >
                <img
                  src={profile1Avatar}
                  alt="Creator 1"
                  class="w-full h-full object-cover"
                />
              </div>

              <!-- Image 2 - Center (larger) -->
              <div
                class="relative w-72 h-[500px] rounded-3xl overflow-hidden shadow-2xl z-10 hover:scale-105 transition-transform duration-300"
              >
                <img
                  src={profile1Avatar}
                  alt="Creator 2"
                  class="w-full h-full object-cover"
                />
              </div>

              <!-- Image 3 - Right -->
              <div
                class="relative w-64 h-96 rounded-3xl overflow-hidden shadow-2xl transform rotate-6 hover:rotate-0 transition-transform duration-300"
              >
                <img
                  src={profile1Avatar}
                  alt="Creator 3"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Creators Section -->
    <section id="creators" class="py-20 px-6 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4"
          >
            {t.sections.creators.title}
          </h2>
          <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
            {t.sections.creators.subtitle}
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            allProfiles.map((profile) => (
              <a
                href={getProfileUrl(profile.id)}
                class="group bg-white border border-gray-200 rounded-2xl overflow-hidden hover:border-brand-blue-500 hover:shadow-xl transition-all duration-300 hover:transform hover:-translate-y-1"
              >
                <div class="aspect-video bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center overflow-hidden">
                  {profile.avatar ? (
                    <img
                      src={profile.avatar}
                      alt={profile.displayName[lang]}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  ) : (
                    <div class="text-6xl">ðŸ‘¤</div>
                  )}
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-brand-blue-500 transition-colors">
                    {profile.displayName[lang]}
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    {profile.bio[lang]}
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">
                      {profile.videos.length} {t.profile.videos}
                    </span>
                    {profile.membershipPrice && (
                      <span class="text-brand-blue-500 font-semibold">
                        ${(profile.membershipPrice / 100).toFixed(2)}
                        {t.profile.perMonth}
                      </span>
                    )}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
      </main>

      <Footer lang={lang} />

      <script>
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener("click", (e) => {
        e.preventDefault();
        const href = anchor.getAttribute("href");
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }
        }
      });
    });
      </script>
    </>
  )}
</Layout>
