---
import Layout from "@/layouts/Layout.astro";
import HomeApp from "@/components/HomeApp/Page.astro";
import HomeCreator from "@/components/HomeCreator/Page.astro";
import { useTranslations, type Language } from "@/i18n/translations";

const lang: Language = "en";
const t = useTranslations(lang);

// Check for qwibee-creator-mode cookie
const creatorMode = Astro.cookies.get("qwibee-creator-mode")?.value === "true";
---

<Layout
  title={t.seo.home.title}
  description={t.seo.home.description}
  lang={lang}
>
  {creatorMode ? <HomeCreator lang={lang} /> : <HomeApp lang={lang} />}
</Layout>
