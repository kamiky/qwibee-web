        0 0 80px rgba(0, 255, 255, 0.6);
      color: #fff;
      letter-spacing: 0.5rem;
      animation: glitch-anim 3s infinite;
    }

    @keyframes glitch-anim {
      0%,
      90%,
      100% {
        transform: translate(0);
      }
      91% {
        transform: translate(-2px, -2px);
        text-shadow:
          0 0 40px rgba(255, 0, 255, 0.8),
          2px 2px 0 #ff00ff,
          -2px -2px 0 #00ffff;
