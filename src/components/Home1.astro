    }

    .home-wrapper .lifetime-btn .btn-price {
      color: #ff00ff;
      text-shadow: 0 0 20px rgba(255, 0, 255, 0.8);
    }

    /* Floating Orbs */
    .home-wrapper .orbs {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
