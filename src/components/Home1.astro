          -2px -2px 0 #ff00ff,
          2px 2px 0 #00ffff;
      }
      95% {
        transform: translate(0);
      }
    }

    .home-wrapper .glitch::before,
    .home-wrapper .glitch::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.8;
    }

